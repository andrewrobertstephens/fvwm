WindowTitle {FvwmScript-Wifi}
WindowSize  24 24

Init
Begin
    Set $ICON=(GetOutput {$FVWM_USERDIR/bin/wifi_icon} 1 -1)
    ChangeIcon 1 $ICON
End

PeriodicTasks
Begin
    Set $OLDICON = $ICON
    Set $ICON=(GetOutput {$FVWM_USERDIR/bin/wifi_icon} 1 -1)
    If $ICON == $OLDICON Then
    Begin
        # do nothing
    End
    Else
    Begin
        ChangeIcon 1 $ICON
    End
End

Widget 1
Property
	Size 24 24
	Position 0 0
	Type ItemDraw
	Flags NoReliefString
Main
	Case message of
	SingleClic :
	Begin
		Do {Exec exec gksudo "xterm -e wifi-menu"}
	End
End

