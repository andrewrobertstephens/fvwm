WindowTitle {FvwmScript-Email}
WindowSize  24 24

Init
Begin
    Set $ICON=(GetOutput {$FVWM_USERDIR/bin/email_icon} 1 -1)
    ChangeIcon 1 $ICON
End

PeriodicTasks
Begin
    If (RemainderOfDiv (GetTime) 600)==0 Then
    Begin
        Set $OLDICON = $ICON
        Set $ICON=(GetOutput {$FVWM_USERDIR/bin/email_icon} 1 -1)
        If $ICON == $OLDICON Then
        Begin
            # do nothing
        End
        Else
        Begin
            ChangeIcon 1 $ICON
        End
    End
End

Widget 1
Property
	Size 24 24
	Position 0 0
	Type ItemDraw
	Flags NoReliefString
Main
	Case message of
	SingleClic :
	Begin
		Do {Exec exec $FVWM_BROWSER http://gmail.com}
	End
End

