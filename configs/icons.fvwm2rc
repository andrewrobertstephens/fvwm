# ====================
# Assign icons to apps
# ====================

+ I Style "*" MiniIcon default:$[FVWM_ICON_SIZE]x$[FVWM_ICON_SIZE]

+ I PipeRead 'cd $FVWM_USERDIR/icons/current; \
              for i in *.svg; do \
                echo Style \"${i%.svg}\" MiniIcon ${i%.svg}:$[FVWM_ICON_SIZE]x$[FVWM_ICON_SIZE]; \
              done'
